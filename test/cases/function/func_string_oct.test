#ON CONDITION
CREATE TABLE t1 (a int);
CREATE TABLE t2 (a int);
INSERT INTO t1 VALUES (100), (200), (300), (10);
INSERT INTO t2 VALUES (100), (50), (20), (10), (300);
SELECT t1.a, t2.a FROM t1 JOIN t2 ON (oct(t1.a) = oct(t2.a));
drop table t1;
