# Basic test case from requirements
SELECT MICROSECOND('15:30:45.123456') AS result1;

# Additional test cases
# TIME type
SELECT MICROSECOND('15:30:45.123456') AS time_with_microseconds;
SELECT MICROSECOND('00:00:00.000000') AS zero_microseconds;
SELECT MICROSECOND('23:59:59.999999') AS max_microseconds;
SELECT MICROSECOND('12:34:56.123') AS partial_microseconds;

# DATETIME type
SELECT MICROSECOND('2024-12-20 15:30:45.123456') AS datetime_with_microseconds;
SELECT MICROSECOND('2024-12-20 00:00:00.000000') AS datetime_zero;
SELECT MICROSECOND('2024-12-20 23:59:59.999999') AS datetime_max;

# TIMESTAMP type
SELECT MICROSECOND(TIMESTAMP('2024-12-20 15:30:45.123456')) AS timestamp_with_microseconds;

# NULL handling
SELECT MICROSECOND(NULL) AS null_input;

# Table usage
CREATE TABLE t1(t TIME);
INSERT INTO t1 VALUES ('15:30:45.123456'), ('00:00:00.000000'), ('23:59:59.999999');
SELECT t, MICROSECOND(t) AS microsecond FROM t1;
DROP TABLE t1;

# DATETIME table
CREATE TABLE t1(dt DATETIME);
INSERT INTO t1 VALUES ('2024-12-20 15:30:45.123456'), ('2024-12-20 00:00:00.000000'), ('2024-12-20 23:59:59.999999');
SELECT dt, MICROSECOND(dt) AS microsecond FROM t1;
DROP TABLE t1;

# WHERE clause
CREATE TABLE t1(t TIME);
INSERT INTO t1 VALUES ('15:30:45.123456'), ('00:00:00.000000'), ('23:59:59.999999');
SELECT * FROM t1 WHERE MICROSECOND(t) > 100000;
DROP TABLE t1;

# Range check (should return 0-999999)
SELECT MICROSECOND('15:30:45.123456') AS result1, MICROSECOND('15:30:45.000000') AS result2, MICROSECOND('15:30:45.999999') AS result3;

