# Basic test cases from requirements
SELECT HOUR('15:30:45') AS result1;
SELECT HOUR('2024-12-20 15:30:45') AS result2;

-- @ignore:0
SELECT HOUR(NOW()) AS result3;

# Additional test cases with TIME type
SELECT HOUR(CAST('15:30:45' AS TIME)) AS time_cast;
SELECT HOUR(CAST('00:00:00' AS TIME)) AS midnight;
SELECT HOUR(CAST('23:59:59' AS TIME)) AS end_of_day;

# Additional test cases with DATETIME type
SELECT HOUR(CAST('2024-12-20 10:20:30' AS DATETIME)) AS datetime_hour;
SELECT HOUR(CAST('2024-12-20 00:00:00' AS DATETIME)) AS datetime_midnight;
SELECT HOUR(CAST('2024-12-20 23:59:59' AS DATETIME)) AS datetime_end;

# Additional test cases with TIMESTAMP type
SELECT HOUR(CAST('2024-12-20 12:30:45' AS TIMESTAMP)) AS timestamp_hour;

# Edge cases
SELECT HOUR(CAST('00:00:00' AS TIME)) AS zero_hour;
SELECT HOUR(CAST('12:00:00' AS TIME)) AS noon;
SELECT HOUR(CAST('13:00:00' AS TIME)) AS one_pm;

# NULL handling
SELECT HOUR(NULL) AS null_result;

# Table usage
CREATE TABLE t1(t TIME, dt DATETIME, ts TIMESTAMP);
INSERT INTO t1 VALUES 
  ('15:30:45', '2024-12-20 15:30:45', '2024-12-20 15:30:45'),
  ('00:00:00', '2024-12-20 00:00:00', '2024-12-20 00:00:00'),
  ('23:59:59', '2024-12-20 23:59:59', '2024-12-20 23:59:59');
SELECT t, HOUR(t) AS hour_from_time, dt, HOUR(dt) AS hour_from_datetime, ts, HOUR(ts) AS hour_from_timestamp FROM t1;
DROP TABLE t1;

# WHERE clause
CREATE TABLE t1(t TIME);
INSERT INTO t1 VALUES ('15:30:45'), ('10:20:30'), ('23:59:59');
SELECT * FROM t1 WHERE HOUR(t) = 15;
SELECT * FROM t1 WHERE HOUR(t) > 12;
DROP TABLE t1;

