# Basic test case from requirements
SELECT DAYOFWEEK('2024-12-20') AS result1;

# Additional test cases
# DATE type - all weekdays
SELECT DAYOFWEEK('2024-12-15') AS sunday;    # Sunday = 1
SELECT DAYOFWEEK('2024-12-16') AS monday;    # Monday = 2
SELECT DAYOFWEEK('2024-12-17') AS tuesday;   # Tuesday = 3
SELECT DAYOFWEEK('2024-12-18') AS wednesday; # Wednesday = 4
SELECT DAYOFWEEK('2024-12-19') AS thursday;  # Thursday = 5
SELECT DAYOFWEEK('2024-12-20') AS friday;    # Friday = 6
SELECT DAYOFWEEK('2024-12-21') AS saturday;  # Saturday = 7

# DATETIME type
SELECT DAYOFWEEK('2024-12-20 12:30:45') AS datetime_friday;
SELECT DAYOFWEEK('2007-02-03 23:59:59') AS datetime_saturday;

# TIMESTAMP type
SELECT DAYOFWEEK('2024-12-20 12:30:45') AS timestamp_friday;

# NULL handling
SELECT DAYOFWEEK(NULL) AS null_date;

# Table usage
CREATE TABLE t1(d DATE, dt DATETIME);
INSERT INTO t1 VALUES ('2024-12-20', '2024-12-20 12:00:00'), ('2024-12-21', '2024-12-21 12:00:00');
SELECT DAYOFWEEK(d) AS day_from_date, DAYOFWEEK(dt) AS day_from_datetime FROM t1;
DROP TABLE t1;

# WHERE clause
CREATE TABLE t1(d DATE);
INSERT INTO t1 VALUES ('2024-12-20'), ('2024-12-21'), ('2024-12-22');
SELECT * FROM t1 WHERE DAYOFWEEK(d) = 6;  # Friday
DROP TABLE t1;

# Verify all weekdays
SELECT DAYOFWEEK('2024-12-15') AS sun, DAYOFWEEK('2024-12-16') AS mon, DAYOFWEEK('2024-12-17') AS tue, DAYOFWEEK('2024-12-18') AS wed, DAYOFWEEK('2024-12-19') AS thu, DAYOFWEEK('2024-12-20') AS fri, DAYOFWEEK('2024-12-21') AS sat;
