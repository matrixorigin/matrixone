# Basic test case from requirements
SELECT MAKETIME(12, 15, 30) AS result1;

# Additional test cases
# Basic time values
SELECT MAKETIME(12, 15, 30) AS time1;
SELECT MAKETIME(0, 0, 0) AS time2;
SELECT MAKETIME(23, 59, 59) AS time3;

# Edge cases
SELECT MAKETIME(0, 30, 45) AS time4;
SELECT MAKETIME(12, 0, 0) AS time5;
SELECT MAKETIME(12, 15, 0) AS time6;

# Large hour values (MySQL TIME allows up to 838 hours)
SELECT MAKETIME(838, 59, 59) AS time7;
SELECT MAKETIME(100, 0, 0) AS time8;

# Invalid values (should return NULL)
SELECT MAKETIME(-1, 15, 30) AS invalid_hour;
SELECT MAKETIME(12, 60, 30) AS invalid_minute;
SELECT MAKETIME(12, 15, 60) AS invalid_second;
SELECT MAKETIME(839, 0, 0) AS invalid_hour_too_large;

# NULL handling
SELECT MAKETIME(NULL, 15, 30) AS null_hour;
SELECT MAKETIME(12, NULL, 30) AS null_minute;
SELECT MAKETIME(12, 15, NULL) AS null_second;
SELECT MAKETIME(NULL, NULL, NULL) AS null_all;

# Float values (should truncate)
SELECT MAKETIME(12.7, 15.8, 30.9) AS float_values;

# Table usage
CREATE TABLE t1(h INT, m INT, s INT);
INSERT INTO t1 VALUES (12, 15, 30), (0, 0, 0), (23, 59, 59);
-- @bvt:issue#22973
SELECT MAKETIME(h, m, s) AS time_value FROM t1;
-- @bvt:issue
DROP TABLE t1;

# WHERE clause
CREATE TABLE t1(h INT, m INT, s INT);
INSERT INTO t1 VALUES (12, 15, 30), (10, 30, 45), (20, 0, 0);
-- @bvt:issue#22973
SELECT * FROM t1 WHERE MAKETIME(h, m, s) > '12:00:00';
-- @bvt:issue
DROP TABLE t1;

# Different numeric types
SELECT MAKETIME(12.0, 15.0, 30.0) AS float_input;
SELECT MAKETIME(CAST(12 AS UNSIGNED), CAST(15 AS UNSIGNED), CAST(30 AS UNSIGNED)) AS unsigned_input;

