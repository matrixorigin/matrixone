# Basic test cases from requirements
SELECT TRUNCATE(4.567, 2) AS result1;
SELECT TRUNCATE(4.567, 0) AS result2;
SELECT TRUNCATE(-4.567, 2) AS result3;

# Additional test cases
SELECT TRUNCATE(4.567, 1) AS one_decimal;
SELECT TRUNCATE(4.567, 3) AS three_decimal;
SELECT TRUNCATE(-4.567, 0) AS negative_zero;
SELECT TRUNCATE(-4.567, 1) AS negative_one;

# Edge cases
SELECT TRUNCATE(0.5, 0) AS zero_point_five;
SELECT TRUNCATE(-0.5, 0) AS negative_zero_point_five;
SELECT TRUNCATE(1.999, 2) AS one_nine_nine;
SELECT TRUNCATE(-1.999, 2) AS negative_one_nine_nine;
SELECT TRUNCATE(10.123456, 3) AS large_number;
SELECT TRUNCATE(-10.123456, 3) AS negative_large_number;

# NULL handling
SELECT TRUNCATE(NULL, 2) AS null_result;
SELECT TRUNCATE(4.567, NULL) AS null_digits;

# Different numeric types
SELECT TRUNCATE(CAST(4.567 AS FLOAT), 2) AS float_truncate;
SELECT TRUNCATE(CAST(4.567 AS DOUBLE), 2) AS double_truncate;

# Table usage
CREATE TABLE t1(a DOUBLE, b INT);
INSERT INTO t1 VALUES (4.567, 2), (4.567, 0), (-4.567, 2), (10.123456, 3), (-10.123456, 3);
SELECT a, b, TRUNCATE(a, b) AS truncated FROM t1;
DROP TABLE t1;

# WHERE clause
CREATE TABLE t1(a DOUBLE);
INSERT INTO t1 VALUES (4.567), (4.123), (-4.567), (10.999);
SELECT * FROM t1 WHERE TRUNCATE(a, 0) = 4;
SELECT * FROM t1 WHERE TRUNCATE(a, 1) > 4.5;
DROP TABLE t1;

# Comparison with ROUND
CREATE TABLE t1(a DOUBLE);
INSERT INTO t1 VALUES (4.567), (4.123), (-4.567);
SELECT a, TRUNCATE(a, 2) AS truncated, ROUND(a, 2) AS rounded FROM t1;
DROP TABLE t1;

