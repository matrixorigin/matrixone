# NULL handling (UTC_TIME() should never return NULL)
SELECT UTC_TIME() IS NOT NULL AS not_null_check;

# Time arithmetic
-- @ignore:0
SELECT UTC_TIME() + INTERVAL 1 HOUR AS one_hour_later;
-- @ignore:0
SELECT UTC_TIME() - INTERVAL 30 MINUTE AS thirty_minutes_ago;

# Format verification (should return TIME type in HH:MM:SS format)
-- @ignore:0
SELECT UTC_TIME() AS time_format;

