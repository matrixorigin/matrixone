# Basic test case from requirements
-- @ignore:0
SELECT UTC_TIME() AS result1;

# Additional test cases
# Basic usage
-- @ignore:0
SELECT UTC_TIME() AS current_utc_time;
-- @ignore:0
SELECT UTC_TIME AS current_utc_time_no_parens;

select utc_time() = utc_time as should_be_true;

# With fractional seconds precision
-- @ignore:0
SELECT UTC_TIME(0) AS utc_time_scale0;
-- @ignore:0
SELECT UTC_TIME(3) AS utc_time_scale3;
-- @ignore:0
SELECT UTC_TIME(6) AS utc_time_scale6;

# Compare with CURRENT_TIME (should be different if not in UTC timezone)
-- @ignore:0,1
SELECT UTC_TIME() AS utc_time, CURRENT_TIME() AS local_time;

# Table usage
CREATE TABLE t1(id INT);
INSERT INTO t1 VALUES (1), (2), (3);
-- @ignore:1
SELECT id, UTC_TIME() AS utc_time FROM t1;
DROP TABLE t1;

