drop database if exists bvt_leftjoin_or;
create database bvt_leftjoin_or;
use bvt_leftjoin_or;
drop table if exists orders;
drop table if exists mapping;
create table orders(
id int primary key,
space_id int,
status int
);
create table mapping(
id int primary key
);
